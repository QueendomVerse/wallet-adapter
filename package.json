        "near-hd-key": "^1.2.1",
        "react-query": "^3.39.3",
        "react-router-dom": "^6.14.1",
        "readable-stream": "^4.4.2",
        "redux": "^4.2.1",
        "redux-thunk": "^2.4.2",
        "rimraf": "^5.0.1",
