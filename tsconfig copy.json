{
    "include": ["./packages/*/*/src/**/*/*.ts", "./packages/*/*/src/**/*/*.tsx"],
    "exclude": ["./node_modules", "./packages/*/*/node_modules", "./packages/*/*/src/__tests__"],
    "compilerOptions": {
        "target": "es2021",
        "module": "commonjs",
        "moduleResolution": "node16",
        "declaration": true,
        "sourceMap": true,
        "noEmitOnError": true,
        "stripInternal": true,
        "skipLibCheck": true,
        "jsx": "react",
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "lib": ["es2021"],
        "types": ["jest"],
        "typeRoots": ["./node_modules/@types", "./node_modules/@solana"]
    },
    "typedocOptions": {
        "entryPoints": ".",
        "entryPointStrategy": "packages",
        "out": "docs",
        "readme": "README.md"
    }
}
