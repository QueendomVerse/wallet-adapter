{
    "name": "@mindblox-wallet-adapter/react",
    "version": "0.15.9",
    "author": "Phillip Strefling <phillip@queendom.io>",
    "repository": "https://github.com/QueendomVerse/wallet-adapter",
    "license": "Apache-2.0",
    "publishConfig": {
        "access": "public"
    },
    "files": [
        "lib",
        "src",
        "LICENSE"
    ],
    "engines": {
        "node": ">=16"
    },
    "type": "module",
    "sideEffects": false,
    "main": "./lib/cjs/index.js",
    "module": "./lib/esm/index.js",
    "types": "./lib/types/index.d.ts",
    "exports": {
        "require": "./lib/cjs/index.js",
        "import": "./lib/esm/index.js",
        "types": "./lib/types/index.d.ts"
    },
    "scripts": {
        "build": "tsc --build --verbose && pnpm run package",
        "clean": "shx mkdir -p lib && rimraf lib",
        "lint": "prettier --check 'src/{*,**/*}.{ts,tsx,js,jsx,json}' && eslint",
        "package": "shx mkdir -p lib/cjs && shx echo '{ \"type\": \"commonjs\" }' > lib/cjs/package.json",
        "test": "jest"
    },
    "peerDependencies": {
        "@solana/web3.js": "^1.78.1",
        "react": "*"
    },
    "dependencies": {
        "@mindblox-wallet-adapter/base": "workspace:^",
        "@react-native-async-storage/async-storage": "^1.19.1",
        "antd": "^5.8.1"
    },
    "devDependencies": {
        "@solana/web3.js": "^1.78.1",
        "@testing-library/react": "^14.0.0",
        "@types/jest": "^29.5.2",
        "@types/react": "^18.2.15",
        "@types/react-dom": "^18.2.7",
        "jest": "29.6.2",
        "jest-environment-jsdom": "^29.6.2",
        "jest-localstorage-mock": "^2.4.26",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "shx": "^0.3.4",
        "ts-jest": "^29.1.0"
    }
}